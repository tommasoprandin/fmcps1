-- A three bit counter

MODULE counter_cell(carry_in)
VAR
  value : boolean;
ASSIGN
  init(value) := FALSE;
  next(value) := value xor carry_in;
DEFINE
  carry_out := value & carry_in;

MODULE main
VAR
  bit0 : counter_cell(TRUE);
  bit1 : counter_cell(bit0.carry_out);
  bit2 : counter_cell(bit1.carry_out);

LTLSPEC 
    G (bit0.carry_out -> F bit2.carry_out)
    
LTLSPEC
    G ( !bit0.value -> F (bit0.value & bit1.value & bit2.value))
    
LTLSPEC
    G (!bit2.carry_out -> F FALSE)
    
LTLSPEC
    G (TRUE -> F bit2.carry_out)



